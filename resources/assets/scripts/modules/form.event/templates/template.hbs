<div class="panel panel-primary">
    <div class="panel-heading">Новое событие</div>
    <div class="panel-body">
        <div class="form-group">
            <label class="control-label" for='event-title'>Место или повод</label>
            <input type="text" id="event-title" class="form-control" name="title">
            <span class="help-block">
                Например: <i>{{example}}</i>
            </span>
            <span class="js-title-error help-block"></span>
        </div>
        <div class="form-group">
            <div class="form-segmented">
                <input checked class="form-segmented__input" type="radio" name="day" id="day-today" value="today">
                <label class="form-segmented__segment" for="day-today"> сегодня</label>
                <input class="form-segmented__input" type="radio" name="day" id="day-tomorrow" value="tomorrow">
                <label class="form-segmented__segment" for="day-tomorrow"> завтра</label>
            </div>
            &nbsp;
            &nbsp;
            &nbsp;
            в
            {{select list=hours name="hour" classes="form-control" selected=hour}}
            :
            {{select list=minutes name="minute" classes="form-control" selected=minute}}
        </div>
        <p class="js-server-error text-danger"></p>
        <button class="btn btn-lg btn-primary js-add">Добавить</button>
        <button class="btn btn-lg btn-default js-cancel">Отменить</button>
    </div>
</div>
